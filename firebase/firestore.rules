service cloud.firestore {
  match /databases/{database}/documents {
    function isAuth() {
    	return request.auth.uid != null;
    }
    function isAdmin() {
      return isAuth()
      	&& exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
    }
    function isOwner() {
    	return request.auth.uid == resource.data.author;
    }
    function lessThanLimit(limit) {
      return request.query.limit <= limit;
    }
    match /{document=**} {
      allow read, write: if false;
    }
    match /stores/{storeId} {
      allow get: if isAdmin() || isOwner() || (!resource.data.archived && resource.data.status == 'online');
      allow list: if (isAdmin() || isOwner()) && lessThanLimit(10);
      allow create: if isAuth();
      allow update: if isAdmin() || isOwner();
    }
    match /users/{userId} {
      allow get, update: if isAdmin() || request.auth.uid == userId;
      allow list: if isAdmin() && lessThanLimit(10);
      allow create: if isAuth();
    }
  }
}
